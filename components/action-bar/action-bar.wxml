<!-- 操作栏组件模板 - 笔记详情页底部交互栏
  功能按钮：分享、点赞、收藏、评论 -->
<view class="action-bar ">
  <!-- 分享按钮 - 使用微信原生分享功能 -->
  <button class="action-item share-button" open-type="share" bindtap="onShare">
    <view class="icon-wrapper">
      <view class="icon icon-share"></view>
    </view>
    <text class="text">分享</text>
  </button>
  <view class="action-item" bindtap="onLike">
    <view class="icon-wrapper">
      <view class="icon icon-like {{isLiked ? 'active' : ''}}"></view>
    </view>
    <text class="text">{{likeCount}}</text>
  </view>
  <view class="action-item" bindtap="onCollect">
    <view class="icon-wrapper">
      <view class="icon icon-collect {{isCollected ? 'active' : ''}}"></view>
    </view>
    <text class="text">{{collectCount}}</text>
  </view>
  <view class="action-item" bindtap="onComment">
    <view class="icon-wrapper">
      <view class="icon icon-comment"></view>
    </view>
    <text class="text">{{commentCount}}</text>
  </view>
</view>