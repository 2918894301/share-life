.publish-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}


.nav-bar {
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eee;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
}


.content-area {
  flex: 1;
  overflow: hidden;
}

.media-upload {
  padding: 20rpx;
  background: #fff;
}

.media-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.media-item {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.media-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.video-preview {
  width: 100%;
  height: 100%;
}

.video-preview-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.video-thumbnail {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.video-duration {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  padding: 4rpx 8rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 20rpx;
  border-radius: 4rpx;
}

.delete-btn {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.upload-btn {
  width: 220rpx;
  height: 220rpx;
  background: #fff;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-btn .plus {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.upload-btn .text {
  font-size: 24rpx;
  color: #999;
}

.title-area {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  display: flex;
}

.title-input {
  width: 100%;
  height: 40rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.title-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.text-area {
  padding: 20rpx;
  background: #fff;
}

textarea {
  width: 100%;
  height: 200rpx;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.category-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.category-item {
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.category-item.active {
  background: #ff4444;
  color: #fff;
}

.location-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
}

.location-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.arrow {
  color: #999;
}

.bottom-bar {
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  border-top: 1rpx solid #eee;
  margin-bottom: env(safe-area-inset-bottom);
}

.cancel-btn {
  font-size: 32rpx;
  color: #666;
}

.publish-btn {
  flex: 1;
  height: 80rpx;
  margin-left: 30rpx;
  background: #ddd;
  color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.publish-btn.active {
  background: #ff4444;
}


.upload-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.upload-content {
  width: 600rpx;
  padding: 60rpx 40rpx;
  background: #fff;
  border-radius: 20rpx;
  text-align: center;
}

.upload-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
  font-weight: 500;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}
