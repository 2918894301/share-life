.action-item:active .comment-icon,
.action-item:active .share-icon {
  transform: scale(0.9);
}

.action-item:active .collect-icon:not(.collectd) {
  background: rgba(255, 215, 0, 0.8);
}

@keyframes pop {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

