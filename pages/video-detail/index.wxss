  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  margin-right: 20rpx;
}

.title-content {
  color: #fff;
  font-size: 26rpx;
  line-height: 1.4;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 500rpx;
}

.action-buttons {
  position: fixed;
  bottom: 150rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 100;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  cursor: pointer;
  background: transparent;
