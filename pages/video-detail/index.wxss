.author-section {
  position: fixed;
  bottom: 190rpx;
  left: 30rpx;
  z-index: 100;
}

.author-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  max-width: 500rpx;
}

.author-avatar {
